<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".VerifyEmailActivity">

    <ImageView
        android:id="@+id/email"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@drawable/email"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/intro_title"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Final step..."
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:fontFamily="@font/montserrat"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/tab_indicator_gray"
        android:text="Confirm your email to complete your account. It's easy - just click the button below "
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_gradient_style"
        android:text="Open mailbox"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_gradient_style"
        android:text="Refresh"
        android:textColor="#fff" />
</RelativeLayout>
